{
  "manifest_version": 3,
  "name": "Nobuco",
  "version": "0.3.0",
  "description": "Filters LinkedIn spam posts and polls. Toggleable format-based filters. 100% local, zero tracking.",
  "author": "nobuco",

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "permissions": ["storage"],

  "host_permissions": [],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
