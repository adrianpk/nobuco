{
  "manifest_version": 3,
  "name": "Nobuco",
  "version": "0.2.0",
  "description": "Filters spam-like LinkedIn posts: excessive line breaks, emoji spam, engagement bait. 100% local, zero tracking.",
  "author": "nobuco",

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "permissions": [],

  "host_permissions": [],

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
